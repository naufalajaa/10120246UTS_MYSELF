<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainscreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <RelativeLayout

            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/styleicon"
            android:padding="18dp">

            <ImageView
                android:id="@+id/potoprofile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/image_dr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/potoprofile"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="	#FFD700"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/potoprofile"
                android:scrollbars="vertical"
                android:text="Hi, my name is Muhammad Naufal Malikulmulki. I'm a student of UNIKOM."
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/styleicon"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hobby"
                android:textAlignment="center"
                android:textColor="	#FFD700"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/home_hobby_swim"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_swim" />

            <ImageView
                android:id="@+id/home_hobby_sport"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_swim"
                android:src="@drawable/ic_sport" />

            <ImageView
                android:id="@id/home_hobby_jersey"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_sport"
                android:src="@drawable/ic_jersey" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_jersey"
                android:src="@drawable/ic_lbg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/foodDrink"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/styleicon"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby_foodDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food and Drink"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_nasgor"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginTop="30dp"
                android:text="Nasi Goreng"
                android:textAlignment="textStart"
                android:textColor="#FFD700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_hobby_mie"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/home_hobby_nasgor"
                android:text="Mie Goreng"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_hobby_kopi"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/home_hobby_mie"
                android:text="Kopi"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interestCitacita"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/styleicon"
            android:padding="16sp">

            <TextView
                android:id="@+id/home_hobby_citacita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Future Goals"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_design"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_centerInParent="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:text="Useful for everyone"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="15sp" />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d4d4d4">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
